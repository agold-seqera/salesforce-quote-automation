<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Set_Quote_Details</name>
        <label>Set Quote Details</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>varNewQuote.Name</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>{!varOpportunity.Name} - Quote</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varNewQuote.OpportunityId</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varNewQuote.BillingName</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varAccount.Name</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varNewQuote.BillingStreet</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varAccount.BillingStreet</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varNewQuote.BillingCity</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varAccount.BillingCity</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varNewQuote.BillingState</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varAccount.BillingState</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varNewQuote.BillingPostalCode</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varAccount.BillingPostalCode</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>varNewQuote.BillingCountry</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>varAccount.BillingCountry</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Create_Clean_Quote</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Check_Auto_Created_QLIs</name>
        <label>Check Auto-Created QLIs</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Screen_Quote_Created_Success</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No Auto-Created QLIs</defaultConnectorLabel>
        <rules>
            <name>Auto_QLIs_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varAutoCreatedQLIs</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Delete_Auto_Created_QLIs</targetReference>
            </connector>
            <label>Auto QLIs Found</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <interviewLabel>Opportunity Button | Create Clean Quote {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opportunity Button | Create Clean Quote</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <recordCreates>
        <name>Create_Clean_Quote</name>
        <label>Create Clean Quote</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Auto_Created_QLIs</targetReference>
        </connector>
        <inputReference>varNewQuote</inputReference>
    </recordCreates>
    <recordDeletes>
        <name>Delete_Auto_Created_QLIs</name>
        <label>Delete Auto-Created QLIs</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Quote_Clearing_Flag</targetReference>
        </connector>
        <inputReference>varAutoCreatedQLIs</inputReference>
    </recordDeletes>
    <recordLookups>
        <name>Get_Account_Details</name>
        <label>Get Account Details</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Set_Quote_Details</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varOpportunity.AccountId</elementReference>
            </value>
        </filters>
        <object>Account</object>
        <outputReference>varAccount</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>Name</queriedFields>
        <queriedFields>BillingStreet</queriedFields>
        <queriedFields>BillingCity</queriedFields>
        <queriedFields>BillingState</queriedFields>
        <queriedFields>BillingPostalCode</queriedFields>
        <queriedFields>BillingCountry</queriedFields>
    </recordLookups>
    <recordLookups>
        <name>Get_Auto_Created_QLIs</name>
        <label>Get Auto-Created QLIs</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Check_Auto_Created_QLIs</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>QuoteId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varNewQuote.Id</elementReference>
            </value>
        </filters>
        <object>QuoteLineItem</object>
        <outputReference>varAutoCreatedQLIs</outputReference>
        <queriedFields>Id</queriedFields>
    </recordLookups>
    <recordLookups>
        <name>Get_Opportunity_Details</name>
        <label>Get Opportunity Details</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Get_Account_Details</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <object>Opportunity</object>
        <outputReference>varOpportunity</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>Name</queriedFields>
        <queriedFields>Pricebook2Id</queriedFields>
        <queriedFields>CloseDate</queriedFields>
        <queriedFields>AccountId</queriedFields>
    </recordLookups>
    <recordUpdates>
        <name>Update_Quote_Clearing_Flag</name>
        <label>Update Quote Clearing Flag</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Screen_Quote_Created_Success</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>varNewQuote.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>QLI_Clearing_Complete__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <object>Quote</object>
    </recordUpdates>
